<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.fossasia.susi.ai.skills.aboutus.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--About Susi -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        app:srcCompat="@drawable/ic_susi_blue"
                        android:padding="@dimen/padding_small"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/about_susi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:padding="@dimen/padding_small"
                        android:textSize="@dimen/message_text_size"
                        android:text="@string/susi_about"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- About Contributors -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_contributors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/susi_contributors"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/contributors_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="@string/susi_contributors_desc"
                        android:textSize="@dimen/message_text_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- About Susi Skill Cms -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_susi_skill_cms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/susi_skill_cms"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/susi_skill_cms_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="@string/susi_skill_cms_desc"
                        android:textSize="@dimen/message_text_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- About Reporting Issues -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_susi_report_issues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/susi_report_issues"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/susi_report_issues_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="@string/susi_report_issues_desc"
                        android:textSize="@dimen/message_text_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- About Licence Information -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_susi_license_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/susi_license_information"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/susi_license_info_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="@string/susi_license_information_desc"
                        android:textSize="@dimen/message_text_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
