<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.fossasia.susi.ai.skills.aboutus.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <!--About Susi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:padding="@dimen/padding_small"
                            app:srcCompat="@drawable/ic_susi_blue" />
                        <TextView
                            android:id="@+id/about_susi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_moderate"
                            android:padding="@dimen/padding_small"
                            android:text="@string/susi_about"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/about_susi_skill_cms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:text="@string/susi_skill_cms"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_large" />
                        <TextView
                            android:id="@+id/susi_skill_cms_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:text="@string/susi_skill_cms_desc"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <!-- About Reporting Issues -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/about_susi_report_issues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:text="@string/susi_report_issues"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_large" />
                        <TextView
                            android:id="@+id/susi_report_issues_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:text="@string/susi_report_issues_desc"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/about_contributors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_medium"
                        android:paddingLeft="@dimen/margin_medium"
                        android:text="@string/susi_contributors"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_large" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_medium">
                        <ImageView
                            android:layout_width="@dimen/license_icon_size"
                            android:layout_height="@dimen/license_icon_size"
                            android:layout_margin="@dimen/about_icon_padding"
                            app:srcCompat="@drawable/about_icon_github"/>
                        <TextView
                            android:id="@+id/contributors_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_medium"
                            android:text="@string/susi_contributors_desc"
                            android:textColor="@color/md_grey_400"
                            android:textSize="@dimen/text_size_medium"  />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <LinearLayout
                    android:id="@+id/ll_about_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/about_susi_license_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_medium"
                        android:paddingLeft="@dimen/margin_medium"
                        android:text="@string/susi_license_information"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_large" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_medium">
                        <ImageView
                            android:layout_width="@dimen/license_icon_size"
                            android:layout_height="@dimen/license_icon_size"
                            android:layout_margin="@dimen/about_icon_padding"
                            app:srcCompat="@drawable/ic_about_license" />
                        <TextView
                            android:id="@+id/susi_license_info_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_medium"
                            android:text="@string/susi_license_information_desc"
                            android:textColor="@color/md_grey_400"
                            android:textSize="@dimen/text_size_medium"  />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_spacing"
                android:clickable="true"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:paddingBottom="@dimen/card_spacing"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/about_card_elevation">
                <LinearLayout
                    android:id="@+id/about_know_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingLeft="@dimen/margin_medium"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/know_more_about_susi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:padding="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
