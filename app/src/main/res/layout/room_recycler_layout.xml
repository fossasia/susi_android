<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_tick"
        android:layout_width="@dimen/width_null"
        android:layout_height="@dimen/height_room_recycler"
        android:layout_weight="1"
        android:layout_margin="@dimen/padding_large"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <TextView
        android:id="@+id/room_text"
        android:layout_width="@dimen/width_null"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large"
        android:text="Living Room" />

    <ImageButton
        android:layout_width="@dimen/width_null"
        android:layout_height="@dimen/height_room_recycler"
        android:layout_weight="1"
        android:id="@+id/delete_room"
        android:layout_margin="@dimen/padding_large"
        android:background="@color/susi_message_link_preview_bg"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>

</LinearLayout>