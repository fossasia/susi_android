<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Chat_Theme" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SignUp_Theme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ForgetPass_Theme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferencesThemeDark" parent="PreferenceFixTheme">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="PreferencesThemeLight" parent="PreferenceFixTheme.Light">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:background">@color/default_bg</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Login_Theme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="sendMessageEditTextTheme">
        <item name="android:textColorHighlight">@color/md_teal_100</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="DevicesThemeLight" parent="PreferenceFixTheme.Light">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:background">@color/default_bg</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <!-- Theme for rating bar in skill details screen -->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/md_grey_500</item>
        <item name="colorControlActivated">@color/md_amber_A200</item>
    </style>
</resources>